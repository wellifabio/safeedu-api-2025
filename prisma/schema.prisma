generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Escola {
  id          Int          @id @default(autoincrement())
  nome        String
  avaliacao   Int
  image       String       @db.LongText
  latitude    Float
  longitude   Float
  comentarios Comentario[]
}

model Comentario {
  id         Int      @id @default(autoincrement())
  id_escola  Int
  comentario String
  data_hora  DateTime @default(now())
  escola     Escola   @relation(fields: [id_escola], references: [id])
}

model Motd {
  MOTD String @id @db.VarChar(255)
}

model Imagem {
  id          Int      @id @default(autoincrement())
  data_upload DateTime @default(now())
  imagem     Bytes       @db.MediumBlob
}
